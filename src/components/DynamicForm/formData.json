  },
  {
    "id": "skills",
    "label": "Select Your Skills",
    "type": "checkbox-group",
    "options": [
      { "label": "JavaScript", "value": "javascript" },
      { "label": "Python", "value": "python" },
      { "label": "Java", "value": "java" },
      { "label": "React", "value": "react" }
    ],
    "required": true
  },
  {
    "id": "company",
    "label": "Company Name",
    "type": "text",
    "placeholder": "Enter your company name (if applicable)",
