  {
    "id": "expected_salary",
    "label": "Expected Salary",
    "type": "number",
    "placeholder": "Enter your expected salary in USD",
    "required": false
  },
  {
    "id": "terms",
    "label": "Accept Terms & Conditions",
    "type": "checkbox",
    "required": true
