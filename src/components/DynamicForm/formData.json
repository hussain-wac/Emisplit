    "type": "file",
    "accept": ".pdf,.doc,.docx",
    "required": false
  },
  {
    "id": "contact_method",
    "label": "Preferred Contact Method",
    "type": "radio",
    "options": [
      { "label": "Email", "value": "email" },
      { "label": "Phone", "value": "phone" },
      { "label": "WhatsApp", "value": "whatsapp" }
